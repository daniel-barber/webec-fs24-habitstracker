{# @pebvariable name="title" type="java.lang.String" #}
{% extends "../layout/default" %}

{% block content %}
    <div class="top">
    <h1 class="headings heading1">Habits</h1>
    <a href="{{ href('/habit/add') }}" class="btn_big">Add a new Habit</a>
    </div>
    <div class="habits_list">
        {% for habit in habits %}
            <a href="{{ href('/habit/' + habit.id) }}" class="link">
                <div class="habits_tile">
                    <strong class="habits_title">
                        {{ habit.name }}
                    </strong>
                    <p class="habits_description">
                        {{ habit.description | abbreviate(100) }}
                    </p>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}